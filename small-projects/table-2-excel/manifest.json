{
	"name": "table-2-excel",
	"version": "0.1.0",
	"description": "table-2-excel for chrome extension.",
	"manifest_version": 2,
	"icons": { "128": "icon.png" },
	"browser_action": {
		"default_icon": "icon.png" ,
		"default_title": "quick-start"
	},
	"permissions": [
		"http://*/",
		"cookies",
		"https://*/",
		"bookmarks",
		"tabs",
		"unlimitedStorage",
		"history",
		"notifications"
	],


	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
	    {
	      "matches": ["https://*/*", "http://*/*"],
	      "css": ["./lib/toast/toast.css"],
	      "js": ["./lib/toast/toast.js", "app.js"]
	    }
	],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "./config/config.json"
  ]
}
